&FORCE_EVAL
  &DFT
    CHARGE 0
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    !WFN_RESTART_FILE_NAME -RESTART.wfn

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL

!      &XC_FUNCTIONAL
!        &BEEF .TRUE.
!        &END
!      &END
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 16
         &END
      &END VDW_POTENTIAL
    &END XC

 
!     For normal DFT
    &QS
      METHOD GPW    
      EPS_DEFAULT 1.0000E-14
      !&DISTRIBUTION
      !  BASIC_OPTIMIZATION .FALSE.
      !  BASIC_SPATIAL_OPTIMIZATION .TRUE.
      !&END
    &END QS
    &MGRID
      CUTOFF 300
      NGRIDS 25
    &END

!     For xTB
!    &QS
!      METHOD xTB
!      &xTB
!        DO_EWALD  T
!        CHECK_ATOMIC_CHARGES  F
!        COULOMB_INTERACTION T
!        &PARAMETER
!          DISPERSION_PARAMETER_FILE dftd3.dat
!          PARAM_FILE_NAME xTB_parameters
!        &END PARAMETER
!      &END
!
!      &DISTRIBUTION
!        BASIC_OPTIMIZATION .FALSE.
!        BASIC_SPATIAL_OPTIMIZATION .TRUE.
!      &END
!    &END QS


    &POISSON
      POISSON_SOLVER PERIODIC
      PERIODIC XYZ
    &END

    &SCF
      SCF_GUESS ATOMIC 
!      SCF_GUESS RESTART
      EPS_SCF 1.e-6
      ADDED_MOS 30
      &DIAGONALIZATION
        &DAVIDSON
        &END
      &END
!      &OT
!         PRECONDITIONER FULL_ALL
!         !MINIMIZER CG
!         !ENERGY_GAP 0.001
!         !LINESEARCH 3PNT
!         !PRECONDITIONER FULL_SINGLE_INVERSE
!         MINIMIZER DIIS
!      &END
!      &OUTER_SCF
!         MAX_SCF  30
!         EPS_SCF 1.e-8
!      &END
      MAX_SCF  30
    &END SCF
  &END DFT

  &SUBSYS
    &CELL
      A 20.000000000000000 0.0000000000000000 0.0000000000000000
      B 0.0000000000000000 20.000000000000000 0.0000000000000000
      C 0.0000000000000000 0.0000000000000000 20.000000000000000
      PERIODIC XYZ
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME c60.xyz
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES T
      &END
    &END

    &KIND N
      ELEMENT N
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND C
      ELEMENT C
      BASIS_SET SZV-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND  O
     ELEMENT O
     BASIS_SET DZVP-MOLOPT-GTH
     POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND  Ti
     ELEMENT Ti
     BASIS_SET DZVP-MOLOPT-SR-GTH
     POTENTIAL GTH-PBE-q12
    &END KIND


   &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT C60
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 3000
    TIMESTEP 1.0
    TEMPERATURE 300.0
   &THERMOSTAT
     REGION GLOBAL
     TYPE CSVR
	 &CSVR
	   TIMECON 15
	 &END
   &END THERMOSTAT
  &END MD

  &PRINT
   &TRAJECTORY
     &EACH
       MD 1
     &END EACH
   &END TRAJECTORY

   &VELOCITIES ON
   &END VELOCITIES

   &FORCES ON
   &END FORCES   

!   &RESTART_HISTORY
!     &EACH
!       MD 50
!     &END EACH
!   &END RESTART_HISTORY

!   &RESTART
!     BACKUP_COPIES 1
!     &EACH
!       MD 50
!     &END EACH
!   &END RESTART

  &END PRINT

&END MOTION
